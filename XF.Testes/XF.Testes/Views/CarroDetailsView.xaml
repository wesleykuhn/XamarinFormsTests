<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Testes.Views.CarroDetailsView"
             x:Name="esta">
    
    <Frame BindingContext="{x:Reference esta}"
           Padding="10"
           BorderColor="Black"
           HasShadow="True"
           CornerRadius="8">
        <StackLayout>
            <Label TextColor="Black" Text="{Binding Carro.Codigo, StringFormat='Codigo: {0}'}" />
            <Label TextColor="Black" Text="{Binding Carro.Marca, StringFormat='Marca: {0}'}" />
            <Entry Placeholder="Modelo do Carro" />
        </StackLayout>
    </Frame>
</ContentView>